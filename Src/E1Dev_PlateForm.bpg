MAKE = $(ROOT)\bin\make.exe -$(MAKEFLAGS) -f$**
DCC = $(ROOT)\bin\dcc32.exe $**
BRCC = $(ROOT)\bin\brcc32.exe $**
#------------------------------------------------------------------------------
PROJECTS = EasyOS.dll EasyCalendar.dll EasyEncrypt.dll EasyIMCode.dll \
  EasyString.dll EasySysShell.dll EasyComputerInfo.dll EasyPlateMain.exe \
  SplashForm.dll pkEasyDBConnection.bpl pkEasyUtilRWConfig.bpl \
  pkEasyUtilClasses.bpl pkEasyUtilFunction.bpl pkgEasyPlateManager.bpl

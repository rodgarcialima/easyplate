  $(DCC)

pkEasyDBConnection.bpl: EaysUtilPlugins\pkEasyDBConnection\pkEasyDBConnection.dpk
  $(DCC)

pkEasyUtilRWConfig.bpl: EaysUtilPlugins\pkEasyUtilRWConfig\pkEasyUtilRWConfig.dpk
  $(DCC)


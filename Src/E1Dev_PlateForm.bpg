  $(DCC)

EasyString.dll: EasyUtilDLL\String\EasyString.dpr
  $(DCC)

EasySysShell.dll: EasyUtilDLL\SysShell\EasySysShell.dpr
  $(DCC)

EasyComputerInfo.dll: EasyUtilDLL\computerinfo\EasyComputerInfo.dpr
  $(DCC)

EasyPlateMain.exe: Client\EasyPlateMain\EasyPlateMain.dpr
  $(DCC)

